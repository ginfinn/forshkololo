// Ряды (про4х знач числа, нет двух одинаковых).cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Получить все четырехзначные целые числа, в записи которых нет двух
//одинаковых цифр

#include<iostream>
#include<math.h>
using namespace std;

int main()
{
 int f = 0, i = 0, x, z, k = 0;
 int mas[10];
 for (x = 1000; x <= 9999; x++)
 {
  for (i = 0; i < 10; i++)
   mas[i] = 0;
  z = x;
  while (z)
  {
   mas[z % 10]++;
   z /= 10;
  }
  for (i = 0; i < 10; i++)
   if (mas[i] > 1)
    break;
  if (i == 10)
  {
   cout « x « " ";
   k++;
   if (k % 15 == 0)
    cout « endl;
   if (k % 500 == 0)
    cin.get();

  }
 }

 cin.get();

 return 0;
}
